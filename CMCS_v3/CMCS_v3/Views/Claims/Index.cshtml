@model IEnumerable<CMCS_v3.Models.Claim>

@{
    ViewBag.Title = "Index";
}

<!-- Page Title -->
<h2 class="text-center mt-4 mb-4 text-primary">Lecturer History</h2>

<!-- Create New Button -->
<p class="text-center mb-4">
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-success btn-lg" })
</p>

<!-- Table Container -->
<div class="container">
    <table class="table table-striped table-hover shadow-lg">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.SubmittedDate)</th>
                <th>@Html.DisplayNameFor(model => model.HoursWorked)</th>
                <th>@Html.DisplayNameFor(model => model.HourlyRate)</th>
                <th>@Html.DisplayNameFor(model => model.ClaimDocumentPath)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SubmittedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoursWorked)</td>
                    <td>@Html.DisplayFor(modelItem => item.HourlyRate)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClaimDocumentPath)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ClaimID }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ClaimID }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ClaimID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Styling for Shadow and Button Hover Effects -->
<style>
    /* Container styling */
    .container {
        max-width: 90%;
        margin-top: 20px;
    }

    /* Table Shadow */
    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    /* Custom Button Hover Effects */
    .btn:hover {
        cursor: pointer;
        transform: scale(1.05);
        transition: transform 0.2s;
    }

    /* Row Hover Effect */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transition: background-color 0.3s;
    }

    /* Action Links in Table */
    .table td a {
        margin: 0 5px;
    }

    /* Button size adjustments */
    .btn-sm {
        padding: 5px 10px;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
